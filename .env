# Kalenjin Dictionary Processing Framework Configuration

# Model Settings
VLM_MODEL_NAME=Qwen/Qwen2.5-VL-7B-Instruct
VLM_CACHE_DIR=./models
VLM_DEVICE=cuda
VLM_MAX_TOKENS=2048
VLM_TEMPERATURE=0.1
VLM_BATCH_SIZE=4

# Processing Settings
IMAGE_DPI=300
IMAGE_FORMAT=PNG
MAX_IMAGE_SIZE=1024

# Output Settings
VLM_OUTPUT_DIR=./output
SAVE_JSON=true
SAVE_CSV=true

# Logging
LOG_LEVEL=INFO
LOG_FILE=dictionary_processing.log

# GPU Settings (if using CUDA)
GPU_MEMORY_FRACTION=0.8
USE_FLASH_ATTENTION=true
